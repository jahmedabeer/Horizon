  @prompt
    a slider first slide would have background video and second one have image

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: {{ block.settings.slider_height }}px;}

  @media screen and (max-width: 749px) {
    .ai-slider-{{ ai_gen_id }} {
      height: {{ block.settings.slider_height_mobile }}px;
    }
  }

  .ai-slider-track-{{ ai_gen_id }} {
    display: flex;
    width: 200%;
    transition: transform 0.5s ease-in-out;
  }

  .ai-slide-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    flex: 0 0 50%;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-slide-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-slide-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;}

  .ai-slide-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-slide-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-slide-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }

  .ai-slide-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 20px;
    max-width: 80%;
  }

  .ai-slide-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin-bottom: 15px;
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
  }

  .ai-slide-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin-bottom: 20px;
    font-size: {{ block.settings.text_size }}px;}

  .ai-slide-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    transition: background-color 0.3s;
  }

  .ai-slide-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-slider-controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    gap: 10px;
    z-index: 3;
  }

  .ai-slider-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    cursor: pointer;
    transition: opacity 0.3s;
  }

  .ai-slider-dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-slider-arrows-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
    z-index: 3;
    padding: 0 20px;
  }

  .ai-slider-arrow-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .ai-slider-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-slider-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }
{% endstyle %}

<slider-component-{{ ai_gen_id }} class="ai-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-slider-track-{{ ai_gen_id }}">
    <!-- First Slide - Video -->
    <div class="ai-slide-{{ ai_gen_id }}">
      <div class="ai-slide-background-{{ ai_gen_id }}">
        {% if block.settings.video_url != blank %}
          <video
            class="ai-slide-video-{{ ai_gen_id }}" 
            autoplay 
            loop 
            muted 
            playsinline
            {% if block.settings.video_lazyload %}
              loading="lazy"
            {% endif %}
          >
            <source src="{{ block.settings.video_url }}" type="video/mp4">Your browser does not support the video tag.
          </video>
        {% else %}
          <div class="ai-slide-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}{% if block.settings.show_overlay %}
          <div class="ai-slider-overlay-{{ ai_gen_id }}"></div>
        {% endif %}
      </div>
      <div class="ai-slide-content-{{ ai_gen_id }}">
        {% if block.settings.slide1_heading != blank %}
          <h2 class="ai-slide-heading-{{ ai_gen_id }}">{{ block.settings.slide1_heading }}</h2>
        {% endif %}
        {% if block.settings.slide1_text != blank %}
          <div class="ai-slide-text-{{ ai_gen_id }}">{{ block.settings.slide1_text }}</div>
        {% endif %}
        {% if block.settings.slide1_button_text != blank and block.settings.slide1_button_link != blank %}
          <a href="{{ block.settings.slide1_button_link }}" class="ai-slide-button-{{ ai_gen_id }}">
            {{ block.settings.slide1_button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Second Slide - Image -->
    <div class="ai-slide-{{ ai_gen_id }}">
      <div class="ai-slide-background-{{ ai_gen_id }}">
        {% if block.settings.slide2_image %}
          <img 
            src="{{ block.settings.slide2_image | image_url: width: 2000 }}" 
            alt="{{ block.settings.slide2_image.alt | escape }}"
            class="ai-slide-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.slide2_image.width }}"
            height="{{ block.settings.slide2_image.height }}"
          >
        {% else %}
          <div class="ai-slide-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        {% if block.settings.show_overlay %}
          <div class="ai-slider-overlay-{{ ai_gen_id }}"></div>
        {% endif %}
      </div>
      <div class="ai-slide-content-{{ ai_gen_id }}">
        {% if block.settings.slide2_heading != blank %}
          <h2 class="ai-slide-heading-{{ ai_gen_id }}">{{ block.settings.slide2_heading }}</h2>
        {% endif %}
        {% if block.settings.slide2_text != blank %}
          <div class="ai-slide-text-{{ ai_gen_id }}">{{ block.settings.slide2_text }}</div>
        {% endif %}
        {% if block.settings.slide2_button_text != blank and block.settings.slide2_button_link != blank %}
          <a href="{{ block.settings.slide2_button_link }}" class="ai-slide-button-{{ ai_gen_id }}">
            {{ block.settings.slide2_button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  {% if block.settings.show_dots %}
    <div class="ai-slider-controls-{{ ai_gen_id }}">
      <div class="ai-slider-dot-{{ ai_gen_id }} active" data-index="0"></div>
      <div class="ai-slider-dot-{{ ai_gen_id }}" data-index="1"></div>
    </div>
  {% endif %}

  {% if block.settings.show_arrows %}
    <div class="ai-slider-arrows-{{ ai_gen_id }}">
      <div class="ai-slider-arrow-{{ ai_gen_id }} prev" aria-label="Previous slide"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      <div class="ai-slider-arrow-{{ ai_gen_id }} next" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 6L15 12L9 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
  {% endif %}
</slider-component-{{ ai_gen_id }}>

<script>
  (function() {
    class SliderComponent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-slider-track-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-slider-dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slider-arrow-{{ ai_gen_id }}.prev');
        this.nextButton = this.querySelector('.ai-slider-arrow-{{ ai_gen_id }}.next');
        this.currentSlide = 0;
        this.slideCount = 2;
        this.autoplayInterval = null;}

      connectedCallback() {
        this.setupEventListeners();
        
        if ({{ block.settings.autoplay | json }}) {
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        if (this.dots.length > 0) {
          this.dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
              this.goToSlide(index);
            });
          });
        }

        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => {
            this.prevSlide();
          });
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => {
            this.nextSlide();
          });
        }
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, {{ block.settings.autoplay_speed | times: 1000 }});
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      prevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.slideCount) % this.slideCount;
        this.updateSlider();
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slideCount;
        this.updateSlider();
      }

      updateSlider() {
        const translateX = -this.currentSlide * 50;
        this.track.style.transform = `translateX(${translateX}%)`;

        if (this.dots.length > 0) {
          this.dots.forEach((dot, index) => {
            if (index === this.currentSlide) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }

        // Reset autoplay if enabled
        if ({{ block.settings.autoplay | json }}) {
          this.stopAutoplay();
          this.startAutoplay();
        }
      }
    }

    customElements.define('slider-component-{{ ai_gen_id }}', SliderComponent{{ ai_gen_id }});
  })();
</script>

